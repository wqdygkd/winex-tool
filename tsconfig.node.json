{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true
  },
  "include": ["vite.config.ts", "vite-plugin-inject-meta.ts", "src/meta/"],
  "ts-node": {
    // Tell ts-node CLI to install the --loader automatically
    // 或者使用 ts-node-esm .\index.ts
    "esm": true
  }
}
